<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1">

    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/register_edit_name"
        android:layout_alignParentTop="true"
        android:hint="请输入您的用户名"
        android:layout_alignLeft="@+id/register_edit_pwd_again"
        android:layout_alignStart="@+id/register_edit_pwd_again"
        android:layout_alignRight="@+id/register_edit_pwd_again"
        android:layout_alignEnd="@+id/register_edit_pwd_again" />



    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_edit_pwd"
        android:hint="请输入您的密码"
        android:layout_below="@+id/register_edit_name"
        android:layout_alignRight="@+id/register_edit_name"
        android:layout_alignEnd="@+id/register_edit_name"
        android:layout_alignLeft="@+id/register_edit_name"
        android:layout_alignStart="@+id/register_edit_name" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/register_btn_cancel"
        android:textSize="20dp"
        android:background="#f71818"
        android:layout_below="@+id/register_btn_sure"
        android:layout_alignLeft="@+id/register_btn_sure"
        android:layout_alignStart="@+id/register_btn_sure"
        android:layout_marginTop="10dp" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_edit_pwd_again"
        android:layout_below="@+id/register_edit_pwd"
        android:layout_centerHorizontal="true"
        android:hint="请确认您的密码" />

    <EditText
        android:id="@+id/register_edit_account"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/register_edit_pwd_again"
        android:layout_marginTop="22dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请确认您的电话号码"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/register_verify"
        android:layout_below="@+id/register_edit_account"
        android:layout_alignLeft="@+id/register_edit_account"
        android:layout_alignStart="@+id/register_edit_account"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_edit_verify_code"
            android:layout_width="235dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:ems="10"
            android:hint="输入验证码" />

        <Button
            android:id="@+id/register_btn_gain_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f71818"
            android:inputType="textPersonName"
            android:text="获取验证码"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_verify"
        android:layout_marginTop="19dp"
        android:background="#1cf718"
        android:text="确定"

        android:textSize="20dp" />

</RelativeLayout>